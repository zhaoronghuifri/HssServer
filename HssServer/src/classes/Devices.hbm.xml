<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC  
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="classes">
	<class name="Devices" table="DEVICES">
		<id name="deviceid" column="DEVICEID">
			<generator class="assigned" />
		</id>
		<property name="deviceip" column="DEVICEIP" />		
		<property name="devicestatus" column="DEVICESTATUS" />
		<property name="deviceload" column="DEVICELOAD" />	
	</class>

</hibernate-mapping>  
